@model HubbleSpace_Final.Entities.Product

@{
    ViewData["Title"] = "Edit Product";
    Layout = "_AdminLayout";

}

<div class="row">
    <div class="card card-body">
        <div class="card-header title--sbold">
            Cập nhật thông tin sản phẩm
        </div>
        <div class="card-body card-block">
            <form asp-action="Edit" class="form-horizontal">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="ID_Product" />

                <div class="row form-group">
                    <div class="col col-md-3">
                        <label asp-for="Product_Name" class="control-label "></label>
                    </div>
                    <div class="col-12 col-md-9">
                        <input asp-for="Product_Name" class="form-control" />
                        <span asp-validation-for="Product_Name" class="text-danger"></span>
                    </div>
                </div>

                <div class="row form-group">
                    <div class="col col-md-3">
                        <label asp-for="Price_Product" class="control-label"></label>
                    </div>
                    <div class="col-12 col-md-9">
                        <input asp-for="Price_Product" class="form-control" />
                        <span asp-validation-for="Price_Product" class="text-danger"></span>
                    </div>
                </div>

                <div class="row form-group">
                    <div class="col col-md-3">
                        <label asp-for="Price_Sale" class="control-label"></label>
                    </div>
                    <div class="col-12 col-md-9">
                        <input asp-for="Price_Sale" class="form-control"/>
                        <span asp-validation-for="Price_Sale" class="text-danger"></span>
                    </div>
                </div>

                <div class="row form-group">
                    <div class="col col-md-3">
                        <label asp-for="ID_Brand" class="control-label"></label>
                    </div>
                    <div class="col-12 col-md-9">
                        <select asp-for="ID_Brand" class="form-control" asp-items="ViewBag.ID_Brand"></select>
                        <span asp-validation-for="ID_Brand" class="text-danger"></span>
                    </div>
                </div>

                <div class="row form-group">
                    <div class="col col-md-3">
                        <label asp-for="ID_Categorie" class="control-label"></label>
                    </div>
                    <div class="col-12 col-md-9">
                        <select asp-for="ID_Categorie" class="form-control" asp-items="ViewBag.ID_Categorie"></select>
                        <span asp-validation-for="ID_Categorie" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group card-footer">
                    <input type="submit" value="Save" class="btn btn-primary col-2" />
                    <input type="reset" value="Reset" class="btn btn-danger col-2" />
                    <a asp-action="Index" class="btn btn-secondary col-2">Back</a>
                </div>
            </form>
        </div>
    </div>
</div>