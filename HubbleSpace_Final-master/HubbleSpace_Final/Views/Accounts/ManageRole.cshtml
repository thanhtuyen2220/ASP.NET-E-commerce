 @model IEnumerable<Microsoft.AspNetCore.Identity.IdentityRole>

    @{
        ViewBag.Title = "All Roles";
        Layout = "_AdminLayout";
    }

    <h1>All Roles</h1>

    @if (Model.Any())
    {
        <a class="btn btn-primary mb-3" style="width:auto" asp-action="CreateRole"
           asp-controller="Accounts">Add new role</a>

        foreach (var role in Model)
        {
            <div class="card mb-3">
                <div class="card-header">
                    Role Id : @role.Id
                </div>
                <div class="card-body">
                    <h5 class="card-title">@role.Name</h5>
                </div>
                <div class="card-footer">
                    <a asp-controller="Accounts" asp-action="EditRole"  class="btn btn-primary">Edit</a>
                    <form method="post" asp-action="DeleteRole" asp-route-id="@role.Id">
                        <button type="submit">
                            <a class="item" data-toggle="tooltip" data-placement="top" title="Delete">
                                <i class="zmdi zmdi-delete"></i>
                            </a>
                        </button>
                    </form>
                    
                </div>
            </div>
        }
    }
    else
    {
        <div class="card">
            <div class="card-header">
                No roles created yet
            </div>
            <div class="card-body">
                <h5 class="card-title">
                    Use the button below to create a role
                </h5>
                <a class="btn btn-primary" style="width:auto"
                   asp-controller="Accounts" asp-action="CreateRole">
                    Create Role
                </a>
            </div>
        </div>
    }
