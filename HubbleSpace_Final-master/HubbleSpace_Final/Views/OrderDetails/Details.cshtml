@model HubbleSpace_Final.Entities.OrderDetail

@{
    ViewData["Title"] = "Details - OrderDetail";
    Layout = "_AdminLayout";

}

<div class="row">
    <div class="card card-body">
        <div class="card-header title--sbold">
            Thông tin chi tiết đơn hàng
        </div>
        <div class="card-body card-block">
            <input type="hidden" asp-for="ID_OrderDetail" />
            <div class="row form-group">
                <div class="col col-md-3">
                    @Html.DisplayNameFor(model => model.Color_Product.product.Product_Name)
                </div>
                <div class="col-12 col-md-9">
                    @Html.DisplayFor(model => model.Color_Product.product.Product_Name)
                </div>
            </div>

            <div class="row form-group">
                <div class="col col-md-3">
                    @Html.DisplayNameFor(model => model.Color_Product.Color_Name)
                </div>
                <div class="col-12 col-md-9">
                    @Html.DisplayFor(model => model.Color_Product.Color_Name)
                </div>
            </div>

            <div class="row form-group">
                <div class="col col-md-3">
                    @Html.DisplayNameFor(model => model.Color_Product.Image)
                </div>
                <div class="col-12 col-md-9">
                    @Html.DisplayFor(model => model.Color_Product.Image)
                </div>
            </div>

            <div class="row form-group">
                <div class="col col-md-3">
                </div>
                <div class="col-12 col-md-9">
                   <img src="~/Images/Color_Product_Avatar/@Html.DisplayFor(model => model.Color_Product.Image)" />
                </div>
            </div>

            <div class="row form-group">
                <div class="col col-md-3">
                    @Html.DisplayNameFor(model => model.Size)
                </div>
                <div class="col-12 col-md-9">
                    @Html.DisplayFor(model => model.Size)
                </div>
            </div>

            <div class="row form-group">
                <div class="col col-md-3">
                    @Html.DisplayNameFor(model => model.Quantity)
                </div>
                <div class="col-12 col-md-9">
                    @Html.DisplayFor(model => model.Quantity)
                </div>

            </div>

            <div class="row form-group">
                <div class="col col-md-3">
                    @Html.DisplayNameFor(model => model.order)
                </div>
                <div class="col-12 col-md-9">
                    @Html.DisplayFor(model => model.order.Address) -
                    @Html.DisplayFor(model => model.order.SDT)

                </div>
            </div>

            <div class="form-group card-footer">
                <a asp-action="Edit" class="btn btn-danger col-2" asp-route-id="@Model.ID_OrderDetail">Edit</a>
                <a asp-action="Index" class="btn btn-secondary col-2" asp-route-id="@Model.ID_Order">Back</a>
            </div>
        </div>
    </div>
</div>

