@model HubbleSpace_Final.Entities.OrderDetail

@{
    ViewData["Title"] = "Delete - OrderDetail";
    Layout = "_AdminLayout";

}

<div class="row">
    <div class="card card-body">
        <div class="card-header title--sbold">
            Xóa chi tiết đơn hàng<br>
            Bạn chắc chắn muốn xóa chi tiết đơn hàng này?
        </div>
        <div class="card-body card-block">
            <input type="hidden" asp-for="ID_OrderDetail" />
            <div class="row form-group">
                <div class="col col-md-3">
                    @Html.DisplayNameFor(model => model.Color_Product.product.Product_Name)
                </div>
                <div class="col-12 col-md-9">
                    @Html.DisplayFor(model => model.Color_Product.product.Product_Name)
                </div>
            </div>

            <div class="row form-group">
                <div class="col col-md-3">
                    @Html.DisplayNameFor(model => model.Color_Product.Color_Name)
                </div>
                <div class="col-12 col-md-9">
                    @Html.DisplayFor(model => model.Color_Product.Color_Name)
                </div>
            </div>

            <div class="row form-group">
                <div class="col col-md-3">
                    @Html.DisplayNameFor(model => model.Color_Product.Image)
                </div>
                <div class="col-12 col-md-9">
                    @Html.DisplayFor(model => model.Color_Product.Image)
                </div>
            </div>

            <div class="row form-group">
                <div class="col col-md-3">
                </div>
                <div class="col-12 col-md-9">
                    <img src="~/Images/Color_Product_Avatar/@Html.DisplayFor(model => model.Color_Product.Image)" />
                </div>
            </div>

            <div class="row form-group">
                <div class="col col-md-3">
                    @Html.DisplayNameFor(model => model.Size)
                </div>
                <div class="col-12 col-md-9">
                    @Html.DisplayFor(model => model.Size)
                </div>
            </div>

            <div class="row form-group">
                <div class="col col-md-3">
                    @Html.DisplayNameFor(model => model.Quantity)
                </div>
                <div class="col-12 col-md-9">
                    @Html.DisplayFor(model => model.Quantity)
                </div>

            </div>

            <div class="row form-group">
                <div class="col col-md-3">
                    @Html.DisplayNameFor(model => model.order)
                </div>
                <div class="col-12 col-md-9">
                    @Html.DisplayFor(model => model.order.Address) -
                    @Html.DisplayFor(model => model.order.SDT)

                </div>
            </div>

            <form asp-action="Delete">
                <div class="form-group card-footer">
                    <input type="hidden" asp-for="ID_OrderDetail" />
                    <input type="submit" value="Delete" class="btn btn-danger col-2" />
                    <a asp-action="Index" class="btn btn-secondary col-2">Back</a>
                </div>
            </form>

        </div>
    </div>
</div>

