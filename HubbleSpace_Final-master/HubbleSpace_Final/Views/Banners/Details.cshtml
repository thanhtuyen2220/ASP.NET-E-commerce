@model HubbleSpace_Final.Entities.Banner

@{
    ViewData["Title"] = "Details Banner";
    Layout = "_AdminLayout";

}
<div class="row">
    <div class="card card-body">
        <div class="card-header title--sbold">
            Thông tin Banner
        </div>
        <div class="card-body card-block">
            <input type="hidden" asp-for="ID_Banner" />
            <div class="row form-group">
                <div class="col col-md-3">
                    @Html.DisplayNameFor(model => model.Banner_Name)
                </div>
                <div class="col-12 col-md-9">
                    @Html.DisplayFor(model => model.Banner_Name)
                </div>
            </div>
            <div class="row form-group">
                <div class="col col-md-3">
                    @Html.DisplayNameFor(model => model.Photo)
                </div>
                <div class="col-12 col-md-9">
                    @Html.DisplayFor(model => model.Photo)
                </div>

            </div>

            <div class="row form-group">
                <div class="col col-md-3">
                </div>
                <div class="col-12 col-md-3">
                    <img src="~/Images/Banner/@Html.DisplayFor(model => model.Photo)" />
                </div>
            </div>

            <div class="row form-group">
                <div class="col col-md-3">
                    @Html.DisplayNameFor(model => model.Date_Upload)
                </div>
                <div class="col-12 col-md-9">
                    @Html.DisplayFor(model => model.Date_Upload)
                </div>
            </div>
            <div class="form-group card-footer">
                <a asp-action="Delete" class="btn btn-danger col-2" asp-route-id="@Model.ID_Banner">Delete</a>
                <a asp-action="Index" class="btn btn-secondary col-2">Back</a>
            </div>
        </div>
    </div>
</div>