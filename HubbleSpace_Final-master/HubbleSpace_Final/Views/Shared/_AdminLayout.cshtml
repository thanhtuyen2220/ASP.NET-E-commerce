
<!DOCTYPE html>
<html lang="en">

<head>
    <!-- Required meta tags-->
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <!-- Title Page-->
    <title>@ViewData["Title"] - Admin - Hubble Space</title>

    <!-- Fontfaces CSS-->
    <link href="~/CoolAdmin-master/css/font-face.css" rel="stylesheet" media="all">
    <link href="~/CoolAdmin-master/vendor/font-awesome-4.7/css/font-awesome.min.css" rel="stylesheet" media="all">
    <link href="~/CoolAdmin-master/vendor/font-awesome-5/css/fontawesome-all.min.css" rel="stylesheet" media="all">
    <link href="~/CoolAdmin-master/vendor/mdi-font/css/material-design-iconic-font.min.css" rel="stylesheet" media="all">

    <!-- Bootstrap CSS-->
    <link href="~/CoolAdmin-master/vendor/bootstrap-4.1/bootstrap.min.css" rel="stylesheet" media="all">
    <link href="~/distribution/vendor/bootstrap/css/bootstrap.css" rel="stylesheet" />
    <!-- Vendor CSS-->
    <link href="~/CoolAdmin-master/vendor/animsition/animsition.min.css" rel="stylesheet" media="all">
    <link href="~/CoolAdmin-master/vendor/bootstrap-progressbar/bootstrap-progressbar-3.3.4.min.css" rel="stylesheet" media="all">
    <link href="~/CoolAdmin-master/vendor/wow/animate.css" rel="stylesheet" media="all">
    <link href="~/CoolAdmin-master/vendor/css-hamburgers/hamburgers.min.css" rel="stylesheet" media="all">
    <link href="~/CoolAdmin-master/vendor/slick/slick.css" rel="stylesheet" media="all">
    <link href="~/CoolAdmin-master/vendor/select2/select2.min.css" rel="stylesheet" media="all">
    <link href="~/CoolAdmin-master/vendor/perfect-scrollbar/perfect-scrollbar.css" rel="stylesheet" media="all">

    <!-- Main CSS-->
    <link href="~/CoolAdmin-master/css/theme.css" rel="stylesheet" media="all">
</head>
@inject Microsoft.AspNetCore.Identity.SignInManager<ApplicationUser> _signInManager
@inject Microsoft.AspNetCore.Identity.UserManager<ApplicationUser> _userManager

<body class="animsition">
    <div class="page-wrapper">
        <!-- HEADER MOBILE-->
        <header class="header-mobile d-block d-lg-none">
            <div class="header-mobile__bar">
                <div class="container-fluid">
                    <div class="header-mobile-inner">
                        <a class="logo" href="~/../Home/Admin">
                            <img src="~/Images/Untitled.png" alt="HS logo" class="d-none d-md-inline-block" style="width: 255px">
                        </a>
                        <button class="hamburger hamburger--slider" type="button">
                            <span class="hamburger-box">
                                <span class="hamburger-inner"></span>
                            </span>
                        </button>
                    </div>
                </div>
            </div>
            <nav class="navbar-mobile">
                <div class="container-fluid">
                    <ul class="navbar-mobile__list list-unstyled">
                        <li>
                            <a href="~/../Admin">
                                <i class="fas fa-tachometer-alt"></i>Trang chủ
                            </a>
                        </li>
                        <li class="has-sub">
                            <a class="js-arrow" href="#">
                                <i class="fas fa-caret-down"></i>Quản lý
                            </a>
                            <ul class="navbar-mobile-sub__list list-unstyled js-sub-list">
                                <li>
                                    <a asp-controller="Categories" asp-action="Index">Danh mục</a>
                                </li>
                                <li>
                                    <a asp-controller="Brands" asp-action="Index">Thương hiệu</a>
                                </li>
                                <li>
                                    <a asp-controller="Products" asp-action="Index">Sản phẩm</a>
                                </li>
                                <li>
                                    <a asp-controller="Orders" asp-action="Index">Đơn hàng</a>
                                </li>
                                <li>
                                    <a asp-controller="Accounts" asp-action="Index">Người dùng</a>
                                </li>
                                <li>
                                    <a asp-controller="Clients" asp-action="Index">Khách hàng</a>
                                </li>
                                <li>
                                    <a asp-controller="Discounts" asp-action="Index">Khuyến mãi</a>
                                </li>
                                <li>
                                    <a asp-controller="Banners" asp-action="Index">Banners</a>
                                </li>
                            </ul>
                        </li>
                        <li>
                            <a asp-controller="Admin" asp-action="statistic">
                                <i class="fas fa-chart-bar"></i>Thống kê
                            </a>
                        </li>
                        <li>
                            <a href="#">
                                <i class="fas fa-calendar-alt"></i>Lịch
                            </a>
                        </li>
                    </ul>
                </div>
            </nav>
        </header>
        <!-- END HEADER MOBILE-->
        <!-- MENU SIDEBAR-->
        <aside class="menu-sidebar d-none d-lg-block">
            <div class="logo">
                <a href="~/../Home/Admin">
                    <img src="~/Images/Untitled.png" alt="HS logo" class="d-none d-md-inline-block" style="width: 255px">
                </a>
            </div>
            <div class="menu-sidebar__content js-scrollbar1">
                <nav class="navbar-sidebar">
                    <ul class="list-unstyled navbar__list">
                        <li>
                            <a href="~/../Admin">
                                <i class="fas fa-tachometer-alt"></i>Trang chủ
                            </a>
                        </li>
                        <li class="has-sub">
                            <a class="js-arrow" href="#">
                                <i class="fas fa-caret-down"></i>Quản lý
                            </a>
                            <ul class="navbar-mobile-sub__list list-unstyled js-sub-list">
                                <li>
                                    <a asp-controller="Categories" asp-action="Index">Danh mục</a>
                                </li>
                                <li>
                                    <a asp-controller="Brands" asp-action="Index">Thương hiệu</a>
                                </li>
                                <li>
                                    <a asp-controller="Products" asp-action="Index">Sản phẩm</a>
                                </li>
                                <li>
                                    <a asp-controller="Orders" asp-action="Index">Đơn hàng</a>
                                </li>
                                <li>
                                    <a asp-controller="Accounts" asp-action="ManageUser">Người dùng</a>
                                </li>
                                <li>
                                    <a asp-controller="Accounts" asp-action="ManageRole">Quản lý Role user </a>
                                </li>
                                <li>
                                    <a asp-controller="Discounts" asp-action="Index">Khuyến mãi</a>
                                </li>
                                <li>
                                    <a asp-controller="Banners" asp-action="Index">Banners</a>
                                </li>
                            </ul>
                        </li>
                        <li>
                            <a asp-controller="Admin" asp-action="statistic">
                                <i class="fas fa-chart-bar"></i>Thống kê
                            </a>
                        </li>
                        <li>
                            <a href="#">
                                <i class="fas fa-calendar-alt"></i>Lịch
                            </a>
                        </li>
                    </ul>
                </nav>
            </div>
        </aside>
        <!-- END MENU SIDEBAR-->
        <!-- PAGE CONTAINER-->
        <div class="page-container">
            <!-- HEADER DESKTOP-->
            <header class="header-desktop">
                <div class="section__content section__content--p30">
                    <div class="container-fluid">
                        <div class="header-wrap">
                            <div class="header-button">

                                @if (_signInManager.IsSignedIn(User))
                                {
                                    <div class="account-wrap">
                                        <div class="account-item clearfix js-item-menu">
                                            <div class="content">
                                                <a class="js-acc-btn" asp-controller="Client_Accounts" asp-action="Profile">@(User.FindFirst("UserFirstName").Value+" "+User.FindFirst("UserLastName").Value)</a>
                                            </div>
                                            <div class="account-dropdown js-dropdown">
                                                <div class="info clearfix">
                                                
                                                    <div class="content">
                                                        <h5 class="name">
                                                            <a asp-controller="Client_Accounts" asp-action="Profile">@(User.FindFirst("UserFirstName").Value+" "+User.FindFirst("UserLastName").Value)</a>
                                                        </h5>
                                                        <span class="email">@User.FindFirst("UserEmail").Value</span>
                                                    </div>
                                                </div>
                                                <div class="account-dropdown__body">
                                                    <div class="account-dropdown__item">
                                                        <a asp-action="Signout" asp-controller="Client_Accounts">
                                                            <i class="zmdi zmdi-account"></i>Signout
                                                        </a>
                                                    </div>
                                                    <div class="account-dropdown__item">
                                                        <a asp-action="ChangePassword" asp-controller="Client_Accounts">
                                                            <i class="zmdi zmdi-settings"></i>Change Password
                                                        </a>
                                                    </div>
                                                    <div class="account-dropdown__item">
                                                        <a asp-action="Index" asp-controller="Home">
                                                            <i class="zmdi zmdi-settings"></i>Your Website
                                                        </a>
                                                    </div>

                                                </div>
                                               
                                            </div>
                                        </div>
                                    </div>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </header>
            <!-- HEADER DESKTOP-->
            <!-- MAIN CONTENT-->
            <div class="main-content">
                <div class="section__content section__content--p30">
                    <div class="container-fluid">
                        @RenderBody()
                    </div>
                </div>
            </div>
            <!-- END MAIN CONTENT-->
        </div>
    </div>
    <!-- Jquery JS-->
    <script src="~/CoolAdmin-master/vendor/jquery-3.2.1.min.js"></script>
    <script src="~/CoolAdmin-master/vendor/jquery-3.4.1.min.js"></script>
    <!-- Bootstrap JS-->
    <script src="~/CoolAdmin-master/vendor/bootstrap-4.1/popper.min.js"></script>
    <script src="~/CoolAdmin-master/vendor/bootstrap-4.1/bootstrap.min.js"></script>
    <!-- Vendor JS       -->
    <script src="~/CoolAdmin-master/vendor/slick/slick.min.js">
    </script>
    <script src="~/CoolAdmin-master/vendor/wow/wow.min.js"></script>
    <script src="~/CoolAdmin-master/vendor/animsition/animsition.min.js"></script>
    <script src="~/CoolAdmin-master/vendor/bootstrap-progressbar/bootstrap-progressbar.min.js">
    </script>
    <script src="~/CoolAdmin-master/vendor/counter-up/jquery.waypoints.min.js"></script>
    <script src="~/CoolAdmin-master/vendor/counter-up/jquery.counterup.min.js">
    </script>
    <script src="~/CoolAdmin-master/vendor/circle-progress/circle-progress.min.js"></script>
    <script src="~/CoolAdmin-master/vendor/perfect-scrollbar/perfect-scrollbar.js"></script>
    <script src="~/CoolAdmin-master/vendor/chartjs/Chart.bundle.min.js"></script>
    <script src="~/CoolAdmin-master/vendor/select2/select2.min.js">
    </script>
    <!-- Main JS-->
    <script src="~/CoolAdmin-master/js/main.js"></script>
    @RenderSection("ajax", required: false)
</body>

</html>
<!-- end document-->