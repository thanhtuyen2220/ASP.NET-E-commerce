@model HubbleSpace_Final.Entities.Size

@{ ViewData["Title"] = "Create Size";
    Layout = "_AdminLayout"; 
}

<div class="row">
    <div class="card card-body">
        <div class="card-header title--sbold">
            Thêm size mới cho sản phẩm
        </div>
        <div class="card-body card-block">
            <form asp-action="Create" method="post" class="form-horizontal">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="row form-group">
                    <div class="col col-md-3">
                        <label asp-for="SizeNumber" class="control-label "></label>
                    </div>
                    <div class="col-12 col-md-9">
                        <input asp-for="SizeNumber" class="form-control" />
                        <span asp-validation-for="SizeNumber" class="text-danger"></span>
                    </div>
                </div>

                <div class="row form-group">
                    <div class="col col-md-3">
                        <label asp-for="Quantity" class="control-label"></label>
                    </div>
                    <div class="col-12 col-md-9">
                        <input asp-for="Quantity" class="form-control" />
                        <span asp-validation-for="Quantity" class="text-danger"></span>
                    </div>
                </div>


                <div class="row form-group">
                    <div class="col col-md-3">
                        Sản phẩm - Màu
                    </div>
                    <div class="col-12 col-md-9">
                        <select asp-for="ID_Color_Product" class="form-control" asp-items="ViewBag.Color_Product"></select>
                    </div>
                </div>

                <div class="form-group card-footer">
                    <input type="submit" value="Create" class="btn btn-primary col-2" />
                    <input type="reset" value="Reset" class="btn btn-danger col-2" />
                    <a asp-action="Index" asp-route-id="@TempData["ID_Color_Product"]" class="btn btn-secondary col-2">Back</a>
                </div>
            </form>
        </div>
    </div>
</div>
