@model HubbleSpace_Final.Entities.Color_Product

@{
    ViewData["Title"] = "Details - Color_Product";
    Layout = "_AdminLayout";

}

<div class="row">
    <div class="card card-body">
        <div class="card-header title--sbold">
            Thông tin màu sản phẩm
        </div>
        <div class="card-body card-block">
            <input type="hidden" asp-for="ID_Color_Product" />

            <div class="row form-group">
                <div class="col col-md-3">
                    @Html.DisplayNameFor(model => model.product.Product_Name)
                </div>
                <div class="col-12 col-md-9">
                    @Html.DisplayFor(model => model.product.Product_Name)
                </div>
            </div>


            <div class="row form-group">
                <div class="col col-md-3">
                    @Html.DisplayNameFor(model => model.Color_Name)
                </div>
                <div class="col-12 col-md-9">
                    @Html.DisplayFor(model => model.Color_Name)
                </div>
            </div>

            <div class="row form-group">
                <div class="col col-md-3">
                    @Html.DisplayNameFor(model => model.Image)
                </div>
                <div class="col-12 col-md-9">
                    @Html.DisplayFor(model => model.Image)
                </div>
            </div>

            <div class="row form-group">
                <div class="col col-md-3">
                </div>
                <div class="col-12 col-md-3">
                    <img src="~/Images/Color_Product_Avatar/@Html.DisplayFor(model => model.Image)" />
                </div>
            </div>

            <div class="row form-group">
                <div class="col col-md-3">
                    @Html.DisplayNameFor(model => model.Date)
                </div>
                <div class="col-12 col-md-9">
                    @Html.DisplayFor(model => model.Date)
                </div>
            </div>

            <div class="form-group card-footer">
                <a asp-action="Index" class="btn btn-dark col-2">Back</a>
                <a asp-action="Edit" class="btn btn-danger col-2" asp-route-id="@Model.ID_Color_Product">Edit</a>
                <a asp-controller="Img_Product" asp-action="Index" class="btn btn-primary col-2" asp-route-id="@Model.ID_Color_Product">Image</a>
                <a asp-controller="Sizes" asp-action="Index" class="btn btn-secondary col-2" asp-route-id="@Model.ID_Color_Product">Size</a>
            </div>
        </div>
    </div>
</div>
