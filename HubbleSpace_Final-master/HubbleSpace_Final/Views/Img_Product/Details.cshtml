@model HubbleSpace_Final.Entities.Img_Product

@{
    ViewData["Title"] = "Details - Img_Product";
    Layout = "_AdminLayout";

}

<div class="row">
    <div class="card card-body">
        <div class="card-header title--sbold">
            Thông tin hình ảnh sản phẩm
        </div>
        <div class="card-body card-block">
            <input type="hidden" asp-for="ID_Img_Product" />
            <div class="row form-group">
                <div class="col col-md-3">
                    @Html.DisplayNameFor(model => model.color_Product.product.Product_Name)
                </div>
                <div class="col-12 col-md-9">
                    @Html.DisplayFor(model => model.color_Product.product.Product_Name)
                </div>
            </div>

            <div class="row form-group">
                <div class="col col-md-3">
                    @Html.DisplayNameFor(model => model.color_Product.Color_Name)
                </div>
                <div class="col-12 col-md-9">
                    @Html.DisplayFor(model => model.color_Product.Color_Name)
                </div>
            </div>


            <div class="row form-group">
                <div class="col col-md-3">
                    @Html.DisplayNameFor(model => model.Photo)
                </div>
                <div class="col-12 col-md-9">
                    @Html.DisplayFor(model => model.Photo)
                </div>
            </div>

            <div class="row form-group">
                <div class="col col-md-3">
                </div>
                <div class="col-12 col-md-9">
                    <img src="~/Images/Product_Color_Image/@Html.DisplayFor(model => model.color_Product.product.Product_Name)/@Html.DisplayFor(model => model.Photo)" />
                </div>
            </div>

            <div class="form-group card-footer">
                <a asp-action="Edit" class="btn btn-danger col-2" asp-route-id="@Model.ID_Img_Product">Edit</a>
                <a asp-action="Index" class="btn btn-secondary col-2">Back</a>
            </div>
        </div>
    </div>
</div>
